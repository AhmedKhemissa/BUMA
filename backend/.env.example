# Groq API key (get one at https://console.groq.com)
GROQ_API_KEY=gsk_YOUR_KEY_HERE

# MongoDB Atlas connection string (optional — app works without it)
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/buma?retryWrites=true&w=majority

# TTS voice model name (default: fr_FR-siwis-medium)
# TTS_VOICE=fr_FR-siwis-medium

# Path to local voice .onnx files (optional — omit to let Piper resolve)
# TTS_VOICES_DIR=./voices
